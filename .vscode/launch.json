{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["-r", "ts-node/register", "${workspaceFolder}/src/**/*.test.ts", "--timeout", "999999", "--colors"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "openOnSessionStart",
      "protocol": "inspector"
    }
  ]
}
